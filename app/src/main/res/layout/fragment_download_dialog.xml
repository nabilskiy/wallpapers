<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/background_top_rounded"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="56dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#8C8C8C"
        android:textSize="14sp"
        android:text="@string/set" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_screen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_top_install_button"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:paddingHorizontal="12dp"
        android:text="@string/home_screen"
        android:textAllCaps="false"
        android:textColor="#E6FFFFFF"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#42404B" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lock_screen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_install_button"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:paddingHorizontal="12dp"
        android:text="@string/lock_screen"
        android:textAllCaps="false"
        android:textColor="#E6FFFFFF"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#42404B" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/both_screen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_install_button"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.01"
        android:paddingHorizontal="10dp"
        android:stateListAnimator="@null"
        android:text="@string/both_screens"
        android:textAllCaps="false"
        android:textColor="#E6FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/download"
        android:textColor="#8C8C8C"
        android:textSize="14sp" />

    <wallgram.hd.wallpapers.presentation.dialogs.DownloadButton
        android:id="@+id/download_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_top_install_button"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:paddingHorizontal="10dp"
        android:stateListAnimator="@null"
        app:wallpaper="@string/adapted"
        android:textAllCaps="false"
        android:textColor="#E6FFFFFF"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#42404B" />

    <wallgram.hd.wallpapers.presentation.dialogs.DownloadButton
        android:id="@+id/original_download_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/background_bottom_install_button"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:paddingHorizontal="10dp"
        android:stateListAnimator="@null"
        app:wallpaper="@string/original_size"
        android:textAllCaps="false"
        android:textColor="#E6FFFFFF"
        android:textSize="16sp" />

</LinearLayout>