<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B1928"
        android:fitsSystemWindows="true"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="#E6FFFFFF">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1sp"
            android:text="@string/lang_title"
            android:textColor="#E6FFFFFF"
            android:textSize="16sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <RadioGroup
        android:id="@+id/lang_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp">

        <RadioButton
            android:id="@+id/ukraine_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Украинский" />

        <RadioButton
            android:id="@+id/russia_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Русский" />

        <RadioButton
            android:id="@+id/english_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Английский" />

        <RadioButton
            android:id="@+id/deutsch_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Немецкий" />

        <RadioButton
            android:id="@+id/espanol_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Испанский" />

        <RadioButton
            android:id="@+id/fr_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Французский" />

        <RadioButton
            android:id="@+id/china_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Китайский" />

        <RadioButton
            android:id="@+id/pt_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Португальский" />
    </RadioGroup>

    <View
        android:id="@+id/border_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lang_group"
        android:layout_marginTop="14dp"
        android:background="#1FFFFFFF" />

</RelativeLayout>