<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B1928"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="#E6FFFFFF">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1sp"
            android:text="@string/lang_title"
            android:textColor="#E6FFFFFF"
            android:textSize="16sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <RadioGroup
        android:id="@+id/lang_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp">

        <RadioButton
            android:id="@+id/ukraine_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Українська"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/russia_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Русский"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/english_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/deutsch_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deutsch"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/espanol_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Español"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/fr_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Français"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/china_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="漢語中文"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/pt_item"
            style="@style/LanguageRadioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Português"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <View
        android:id="@+id/border_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/lang_group"
        android:layout_marginTop="14dp"
        android:background="#1FFFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>