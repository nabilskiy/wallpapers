<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/roboto_bold"
        android:lineSpacingExtra="5sp"
        android:text="Пожалуйста, оформите подписку или посмотрите рекламу, чтобы продолжить скачивать обои"
        android:textAlignment="center"
        android:textColor="#E6FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"

        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="4sp"
        android:text="Вы достигли лимита в 10 бесплатных скачиваний в сутки"
        android:textAlignment="center"
        android:textColor="#BAFFFFFF"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/subscribe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/play_ads_btn"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:stateListAnimator="@null"
        android:text="Оформить подписку"
        android:textAllCaps="false"
        android:textColor="#E6000000"
        android:textSize="14sp"
        app:backgroundTint="#F5C901"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_sub_doll"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="#BDBDBD" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_ads_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:stateListAnimator="@null"
        android:text="Оформить подписку"
        android:textAllCaps="false"
        android:textColor="#DAAD00"
        android:textSize="14sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_play_ads"
        app:iconGravity="textStart"

        app:iconPadding="12dp"
        app:iconTint="#F5C901"
        app:strokeColor="#F5C901"
        app:strokeWidth="2dp" />

</RelativeLayout>