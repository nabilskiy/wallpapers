<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
            android:id="@+id/month_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_custom_radio_buttons_unselected_state"
            app:period_field="@string/month" />

        <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
            android:id="@+id/year_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_custom_radio_buttons_unselected_state"
            app:period_field="@string/year" />
    </wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup>

    <wallgram.hd.wallpapers.presentation.base.CustomMaterialButton
        android:id="@+id/subscribe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="8sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/subscribe_now"
        android:textAllCaps="false"
        android:textColor="#E6000000"
        android:textSize="18sp"
        app:backgroundTint="#FFCC00"
        app:cornerRadius="12dp" />

    <wallgram.hd.wallpapers.presentation.base.CustomTextView
        android:id="@+id/text_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="2sp"
        android:text="@string/sub_text"
        android:textAlignment="center"
        android:textColor="#66FFFFFF"
        android:textSize="12sp"
     />

</LinearLayout>