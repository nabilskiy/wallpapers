<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:visibility="visible"
        tools:context=".presentation.subscribe.SubscriptionFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/subscribe_bg"/>

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_clear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#E6FFFFFF" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Wallgram Pro"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_btn" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="56dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="10dp"
            android:maxLines="4"
            android:text="100% No Ads \nUnlimited Wallpaper Downloads\nDaily Wallpapers Update\nFull access to the wallpaper changer"
            android:textColor="#E9E9EB"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text" />


        <wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/description_text">

            <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
                android:id="@+id/month_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_custom_radio_buttons_unselected_state"
                app:period_field="1 месяц" />

            <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
                android:id="@+id/year_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_custom_radio_buttons_unselected_state"
                app:discount_field="@string/save_50"
                app:period_field="1 год" />
        </wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/subscribe_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="8sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/subscribe_now"
            android:textAllCaps="false"
            android:textColor="#E6000000"
            android:textSize="18sp"
            app:backgroundTint="#FFCC00"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/radio_group" />

        <TextView
            android:id="@+id/text_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="2sp"
            android:text="@string/sub_text"
            android:textAlignment="center"
            android:textColor="#66FFFFFF"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/subscribe_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>
