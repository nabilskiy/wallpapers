<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".ui.subscribe.SubscriptionFragment">

        <TextView
            android:id="@+id/header_title"
            style="@style/TextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_plan"
            app:layout_constraintTop_toTopOf="parent" />

        <wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/header_title">

            <wallgram.hd.wallpapers.views.radiobutton.TwoFieldCustomRadioButton
                android:id="@+id/default_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_custom_radio_buttons_unselected_state"
                app:discount_field="@string/current"
                app:period_field="@string/free"
                app:price_field="0 â‚´" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="12dp"
                android:gravity="top"
                android:lineSpacingExtra="4sp"
                android:text="@string/pro"
                android:textColor="@color/colorYellow"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_pro" />


            <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
                android:id="@+id/month_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_custom_radio_buttons_unselected_state"
                app:period_field="@string/month" />


            <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
                android:id="@+id/year_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_custom_radio_buttons_unselected_state"
                app:discount_field="@string/save_50"
                app:period_field="@string/year" />
        </wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/subscribe_btn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="8sp"
            android:text="@string/subscribe_now"
            android:textAllCaps="false"
            android:textColor="#E6000000"
            android:textSize="14sp"
            app:backgroundTint="@color/colorYellow"
            app:cornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@id/radio_group" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="2sp"
            android:text="@string/free_days"
            android:textAlignment="center"
            android:textColor="#F5C901"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subscribe_btn" />

        <TextView
            android:id="@+id/text_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="2sp"
            android:text="@string/sub_text"
            android:textAlignment="center"
            android:textColor="#66FFFFFF"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/text_2" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="text_sub,header_title,subscribe_btn,text_2,radio_group" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
