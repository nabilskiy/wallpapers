<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.subscribe.SubscriptionFragment">

    <TextView
        android:id="@+id/header_title"
        style="@style/TextHeader"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите тарифный план" />

    <wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_below="@id/header_title"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:layout_marginTop="24dp"
        android:paddingEnd="16dp">

        <wallgram.hd.wallpapers.views.radiobutton.TwoFieldCustomRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_custom_radio_buttons_selected_state"
            app:period_field="Бесплатно"
            app:price_field="0 ₴"
            app:discount_field="Выбран"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/colorYellow"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_pro"
            android:gravity="top"
            android:drawablePadding="12dp"
            android:text="Без ограничений скачивания\nБез рекламы"/>


        <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_custom_radio_buttons_unselected_state"
            app:period_field="/ месяц"
            app:price_field="19,99 ₴" />

        <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_custom_radio_buttons_unselected_state"
            app:discount_field="Экономия 16%"
            app:period_field="/ полгода"
            app:price_field="94,99 ₴" />

        <wallgram.hd.wallpapers.views.radiobutton.OneFieldCustomRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_custom_radio_buttons_unselected_state"
            app:discount_field="Экономия 31%"
            app:period_field="/ год"
            app:price_field="199,99 ₴" />
    </wallgram.hd.wallpapers.views.radiobutton.CustomRadioGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/subscribe_btn"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/radio_group"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="8sp"
        android:text="Подпишись прямо сейчас"
        android:textAllCaps="false"
        android:textColor="#E6000000"
        android:textSize="14sp"
        app:backgroundTint="@color/colorYellow"
        app:cornerRadius="4dp" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subscribe_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="2sp"
        android:text="И получи 3 бесплатных дня в подарок"
        android:textAlignment="center"
        android:textColor="#F5C901"
        android:textSize="12sp" />

    <TextView
        android:layout_below="@id/text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="2sp"
        android:text="@string/sub_text"
        android:textAlignment="center"
        android:textColor="#66FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>