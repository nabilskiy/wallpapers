<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_middle"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_smlarge">

            <RelativeLayout
                android:id="@+id/port_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="34dp">

                <ImageView
                    android:id="@+id/port_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_portrait"
                    android:layout_marginEnd="12dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/port_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/port_icon"
                    android:layout_centerVertical="true"
                    android:text="@string/portrait"
                    android:textSize="15sp"/>
<!--                <TextView-->
<!--                    android:id="@+id/port_size"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/port_title"-->
<!--                    android:textSize="12sp"-->
<!--                    android:visibility="gone"-->
<!--                    android:layout_toEndOf="@id/port_icon"-->
<!--                    android:textColor="@color/grey_40"-->
<!--                    android:text="1080x2340 px"/>-->
                <TextView
                    android:id="@+id/port_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"

                    android:textColor="@color/grey_40" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_middle"
                android:background="@color/grey_60" />

            <RelativeLayout
                android:id="@+id/album_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="34dp">
                <ImageView
                    android:id="@+id/album_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_landscape"
                    android:layout_marginEnd="12dp"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:id="@+id/album_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/album_icon"
                    android:layout_centerVertical="true"
                    android:text="@string/landscape"
                    android:textSize="15sp"/>

<!--                <TextView-->
<!--                    android:id="@+id/album_size"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/album_title"-->
<!--                    android:textSize="12sp"-->
<!--                    android:visibility="gone"-->
<!--                    android:layout_toEndOf="@id/album_icon"-->
<!--                    android:textColor="@color/grey_40"-->
<!--                    android:text="2340x2340 px"/>-->
                <TextView
                    android:id="@+id/album_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/grey_40"
                    android:layout_centerVertical="true"
                    android:textSize="12sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_middle"
                android:background="@color/grey_60" />

            <RelativeLayout
                android:id="@+id/original_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="34dp">

                <ImageView
                    android:id="@+id/original_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_original"
                    android:layout_marginEnd="12dp"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:id="@+id/original_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/original"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/original_icon"
                    android:textSize="15sp"/>
<!--                <TextView-->
<!--                    android:id="@+id/original_size"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/original_title"-->
<!--                    android:textSize="12sp"-->
<!--                    android:visibility="gone"-->
<!--                    android:layout_toEndOf="@id/original_icon"-->
<!--                    android:textColor="@color/grey_40"-->
<!--                    android:text="1080x2340px"/>-->

                <TextView
                    android:id="@+id/original_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/grey_40" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rounded_accent"
                android:paddingLeft="@dimen/spacing_mlarge"
                android:paddingRight="@dimen/spacing_mlarge"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>