<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:colorBackground">#232035</item>
        <item name="colorOnBackground">#232035</item>

<!--        <item name="android:statusBarColor">@color/colorPrimaryDark</item>-->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <item name="materialAlertDialogTheme">@style/CustomAlertDialogTheme</item>
        <item name="alertDialogTheme">@style/DialogStyle</item>

        <item name="android:statusBarColor">#1B1928</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DetailsActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="CustomAlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/color_secondary</item>
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialAlertDialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MaterialAlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <style name="StartActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
