<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">#232035</item>

        <!--        <item name="android:statusBarColor">@color/colorPrimaryDark</item>-->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <item name="materialAlertDialogTheme">@style/CustomAlertDialogTheme</item>
        <item name="alertDialogTheme">@style/DialogStyle</item>

        <item name="android:statusBarColor">#1B1928</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/color_secondary</item>
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialAlertDialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MaterialAlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="AppTheme.BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_top_rounded</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>


    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <style name="AppTheme_FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_secondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme_Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MenuTextStyle">

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:drawablePadding">17dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="LanguageRadioStyle">
        <item name="android:buttonTint">#E6FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lang_text_selector</item>
        <item name="android:button">@drawable/lang_icon_selector</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingStart">44dp</item>
    </style>

</resources>
