<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/colorGrayText" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="3dp"
                android:top="3dp" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">

        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/colorGray" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="3dp"
                android:top="3dp" />

            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
